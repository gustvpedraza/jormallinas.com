---
import BaseHead from '../components/BaseHead.astro';
import Nav from '../components/Nav.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import Hero from '../components/Hero.astro';
import Main from '../components/Main.astro';
import Servicios from "../components/Servicios.astro";
import About from '../components/about.astro';
import Footer from '../components/Footer.astro';
import Experiencia from '../components/Experiencia.astro';
import Contact from '../components/Contact.astro';
---

<!doctype html>
<html lang="es">
	<head>
		<!-- Google tag (gtag.js) -->
		<script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-BZJK73YDMV"></script>
		<script is:inline>
		window.dataLayer = window.dataLayer || [];
		function gtag(){dataLayer.push(arguments);}
		gtag('js', new Date());

		gtag('config', 'G-BZJK73YDMV');
		</script>
		<style>
			[data-aos] {
			  opacity: 0;
			  transition-property: opacity, transform;
			}
		</style>
		<link rel="preload" href="https://unpkg.com/aos@2.3.1/dist/aos.css" as="style" onload="this.onload=null;this.rel='stylesheet'">
		<script is:inline defer src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="body">
		<div class="header-wrapper relative">
			<Nav/>
			<div class="rellax hero-content-container" data-rellax-speed="-4">
				<Hero/>
			</div>
		</div>
		<div class="rellax" data-rellax-speed="0">
			<Main />
		</div>
		<Servicios/>
		<About/>
		<Experiencia/>
		<Contact/>
		<Footer />
	</body>
</html>

  <style is:global>

	body {
		margin: 0 auto;
		position: relative;
		z-index: 2;
	}
	.header-wrapper{
		background-color: var(--secundary-700);
	}
	.header-wrapper{
		overflow: hidden;
	}
	.lightbox::after{
		content: "";
		width: 100%;
		height: 100%;
		background-color: #1E3A2B;
		opacity: .8;
		position: fixed;
		top: 0;
		left: 0;
		z-index: 2;

	}
</style>
<script is:inline>

	
	const hamburger = document.querySelector('.hamburger-menu');
	const close = document.querySelector('.close-btn');
	const contact = document.querySelector('.contact-btn');
	const menu = document.querySelector('.mobile-menu');
	const body = document.querySelector('.body');
	const mobileLinks = document.querySelectorAll('.mobile-link-close');

	function toggleMenu() {
		menu.classList.toggle('active');
		hamburger.classList.toggle('primary');
		hamburger.classList.toggle('on');
		body.classList.toggle('lightbox');
	}

	hamburger.addEventListener('click', toggleMenu);
	close.addEventListener('click', toggleMenu);
	contact.addEventListener('click', toggleMenu);

	// Add click handlers for mobile links
	mobileLinks.forEach(link => {
		link.addEventListener('click', () => {
			// Small delay to allow the navigation to happen before closing menu
			setTimeout(toggleMenu, 100);
		});
	});

	document.addEventListener('click', (e) => {
		if (!menu.contains(e.target) && !hamburger.contains(e.target) && menu.classList.contains('active')) {
			toggleMenu();
		}
	});
  
  </script>
<script is:inline src="/rellax.min.js"></script>
<script is:inline>
     var rellax = new Rellax('.rellax', {
    center:true
  });
</script>
<script is:inline>
	document.addEventListener("DOMContentLoaded", function() {
    	AOS.init();
  	});
</script>




