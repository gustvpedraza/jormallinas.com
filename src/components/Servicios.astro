---
import ServicesCarousel from './ServicesCarousel.jsx'

---



<section class="servicios" id="servicios">
    <h4 class="text-center text-4xl text-semibold servicios__title xs-text-lg">SERVICIOS</h4>
    <div class="servicios__bullets">
        <ServicesCarousel client:load />
    </div>
</section>
<style>
    .servicios {
        background-color: var(--primary-200);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 118px 0;
    }
    @media (max-width: 575.98px){
        .servicios {
        padding: 58px 0;
        }
    }
    .servicios__title{
        color: var(--secundary-700);
        margin-bottom: 48px;
    }
    @media (max-width: 575.98px){
        .servicios__title{
        color: var(--secundary-700);
        margin-bottom: 24px;
        }
    }
    .servicios__bullets{
        width: 100%;
    }
    @media (max-width: 575.98px){
    	.servicios__bullets h3{
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 4px;
        }
    }

    .servicios__bullets h3:not(:last-child) {
        margin-bottom: 8px;
    }
    @media (max-width: 575.98px){
        svg{
        width: 24px;
        }
        i.mr-3{
            margin: 0;
        }
        i.ml-3{
            margin: 0;
        }

        .servicios__bullets h3 i{
           display: flex;
           align-items: center;
           justify-content: center;
           gap: 16px;
        }
    }

  

    h3 {
        position: relative;
        overflow: hidden;
    }



    h3:hover {
        color: var(--tertiary-200);
        background-color: var(--secundary-900);
    }



</style>