---
import { Image } from 'astro:assets'
import heroImage from '../assets/character-1.png';
import Button from './Button.astro';
import Waves from './Waves.astro';
---


<header class="hero-container">
    <div class="hero">
        <div class="hero__text position-relative">
            <canvas id="canvas-saludo" class="mb-24"></canvas>
            <p class="text-center text-2xl sm-text-2xl xs-text-base text-semibold name">Soy Jormary Llinas • Web Designer y UX/UI Designer</p>
            <h2 class="text-center text-lg sm-text-lg xs-text-base text-regular mb-24 enunciado">Ayudo a startups, agencias de diseño y pequeñas empresas a convertir ideas en aplicaciones y páginas web responsive, optimizadas para ofrecer experiencias intuitivas que atraen y retienen usuarios.</h2>
            
            <div class="hero__buttons">
                <Button link="/#form" type="primary">
                    Contactar
                </Button>
            </div>
        </div>
    </div>
</header>
<Waves/>


<style>
    .hero__buttons{
        position: relative;
        z-index: 1;
    }
    .enunciado{
        max-width: 500px;
    }
    .hero-container{
        background-color: var(--secundary-700);
    }
    .hero{
        background-color: var(--secundary-700);
        position: relative;
        display: grid;
        place-items: center;
        overflow: hidden;
        max-width: 1920px;
        margin: 0 auto;
        margin-top: 8%;
    }
    .hero__text{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .hero__text h2,  .hero__text p{
        color: var(--background-50);

    }



    @media (max-width: 575.98px){
        .hero{
        /* background-color: var(--background-50); */
        background-repeat: no-repeat;
        background-position: bottom;
        background-size: cover;
        position: relative;
        height: 720px;
        display: grid;
        place-items: center;
        }
    }
    .title{
        font-family: 'Pacifico-Regular', sans-serif;
        font-size: 8.75rem;
        text-align: center;
        font-weight: 400;
        line-height: 1.3;
    }
    @media (max-width: 575.98px){
        .title{
        font-family: 'Pacifico-Regular', sans-serif;
        font-size: 6.125rem;
        text-align: center;
        font-weight: 400;
        line-height: 1.4;
        }
    }
    .name{
        margin-top: -40px;
    }
    .hero-text .title,h1,p,h2{
        color: var(--secundary-700);
    }
    .hero__img{
        position: absolute;
        bottom: 0;
        right: 10%;
        pointer-events: none;
    }
    @media (max-width: 1440px){
        .hero__img{
            bottom: -24px;
        }
    }
    @media (max-width: 1200px){
        .hero__img{
        position: absolute;
        bottom: -24px;
        right: -112px;
        }
    }
    @media (max-width: 820px){
        .hero__img{
        position: absolute;
        bottom: -16px;
        right: 0px;
        height: 300px;
        width: auto;
        }
    }
    @media (max-width: 575.98px){
        .hero__img{
        position: absolute;
        bottom: -16px;
        right: -8%;
        height: 300px;
        width: auto;
        }
    }

    @media (max-width: 375.98px){
        .hero__img{
            position: absolute;
            bottom: -48px;
            right: -12%;
            height: 300px;
            width: auto;
        }
    }

    #canvas-saludo{
        width: 800px;
        height: auto;
    }

    @media (max-width: 1024px){
        #canvas-saludo{
        width: 320px;
        height: auto;
        margin: 80px 0 40px;
        }
    }

    @media (max-width: 575.98px){
        #canvas-saludo{
        width: 320px;
        height: auto;
        margin: 80px 0 40px;
        }
        .enunciado{
            max-width: 100%;
            padding: 8px 24px;
        }
    }

    @media (max-width: 375.98px){
        #canvas-saludo{
        width: 320px;
        height: auto;
        margin: -24px 0 40px;
        }
    }

    .position-absolute{
        position: absolute;
    }

    .position-relative{
        position: relative;
    }
    .sea{
        top: -24px;
        bottom: 0;
        left: 0;
        right: 0;
        opacity: .1;
    }

    .sea video{
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .rocks{
        bottom: -350px;
        right: 0;
        opacity: .9;
        pointer-events: none;
    }

    @media (max-width: 575.98px){
    	.rocks{
            bottom: -24%;
        }
    }

    .hero-character{
        height: 410px;
        pointer-events: none;
    }

    @media (max-width: 820px){
        .hero-character{
            height: 330px;
            margin-top: 40px;
            display: none;
        }
    }

    @media (max-width: 575.98px){
        .hero-character{
            height: 250px;
            margin-top: 40px;
           
        }
    }

    @media (max-width: 575.98px){
    	.hero__text{
            bottom: 2%;
        }
    }



</style>

<script is:inline src="https://unpkg.com/@rive-app/canvas@2.7.0"></script>
<script is:inline>
        const r = new rive.Rive({
        src: "/saludo.riv",
        canvas: document.getElementById("canvas-saludo"),
        autoplay: true,
        // artboard: "Arboard", // Optional. If not supplied the default is selected
        stateMachines: "State Machine 1",
        onLoad: () => {
          // Ensure the drawing surface matches the canvas size and device pixel ratio
          r.resizeDrawingSurfaceToCanvas();
        },
      });
</script>

